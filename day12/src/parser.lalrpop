use crate::input::{Rule, Input};

grammar;

Pot: bool = {
    "#" => true,
    "." => false,
};

Initial: Vec<bool> = "initial state:" <ps:Pot+> => ps;

Rule: Rule = <p0:Pot> <p1:Pot> <p2:Pot> <p3:Pot> <p4:Pot> "=>" <t:Pot> => ([p0, p1, p2, p3, p4], t);

pub Input: Input = <initial:Initial> ";" <rules:Rule+> => Input{initial, rules};
